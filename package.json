{
  "private": true,
  "workspaces": [
    "packages/types",
    "packages/console",
    "packages/main"
  ],
  "scripts": {
    "build:types": "npm run -w @tripsam/types build",
    "build:console": "npm run -w @tripsam/console build",
    "build:main": "npm run -w @tripsam/main build",
    "publish:types": "npm publish --workspace @tripsam/types --access public",
    "publish:console": "npm publish --workspace @tripsam/console --access public",
    "publish:main": "npm publish --workspace @tripsam/main --access public",
    "view:console": "node -e \"import('@tripsam/console').then(m=>console.log(Object.keys(m)))\"",
    "view:main": "node -e \"import('@tripsam/main').then(m=>console.log(Object.keys(m)))\""
  }
}
